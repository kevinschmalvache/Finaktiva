@model sb_admin_2.Web.Models.Edmx.Municipio
@{
    ViewBag.Title = "Municipios|Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Editar Municipio</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<!-- /.row -->
<div class="row">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-row">
            <div class="form-group col-md-4">
                <label>Id</label>
                <input type="text" class="form-control" readonly value="@Model.id" />
            </div>
            <div class="form-group col-md-4">
                <label>Nombre</label>
                @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control", @required = "required", maxlength = "150" } })
            </div>

            <div class="form-group col-md-4">
                <label>¿Activo?</label>
                <br /> &nbsp; &nbsp; &nbsp;
                @Html.CheckBoxFor(model => model.estado, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        @Html.HiddenFor(model => model.fecha_creacion)
        @Html.HiddenFor(model => model.fecha_edicion)
        @Html.HiddenFor(model => model.id)

        <div class="form-row">
            <div class="form-group col-md-6 ">
                <button type="button" onclick="location.href='@Url.Action("Index", "Municipios")'" class="btn btn-default pull-right">Volver</button>
            </div>
            <div class="form-group col-md-6">
                <button type="submit" class="btn btn-primary">Editar</button>
            </div>
        </div>
    }
</div>
<!-- /.row -->
