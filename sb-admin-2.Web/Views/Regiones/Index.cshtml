@model List<sb_admin_2.Web.Models.Edmx.Region>
@{
    ViewBag.Title = "REgión|Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Scripts/controller/Regiones/Index.js"></script>

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Regiones</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <div class="col-12 pull-left " style="margin:15px;">
        <button type="submit" class="btn btn-primary" aria-label="Left Align" onclick="location.href='@Url.Action("Create", "Regiones")'">
            Crear Región &nbsp;
            <span class="fa fa-plus fa-lg" aria-hidden="true"></span>
        </button>
    </div>

</div>

@Html.AntiForgeryToken()

<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Listado de Regiones
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>Código</th>
                                <th>Nombre</th>
                                <th>Fecha de creación</th>
                                <th>Fecha de modificación</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                                <tr class="gradeA">
                                    <td>@item.id</td>
                                    <td>@item.nombre</td>
                                    <td>@item.fecha_creacion</td>
                                    <td>@item.fecha_edicion</td>
                                    <td class="center">
                                        <button title="Editar" style="margin:0 !important;padding:0px !important;padding-right:3px !important" type="button" class="btn btn-dark" onclick="location.href='@Url.Action("Edit", "Regiones", new { id = item.id })'"><i class="fa fa-edit"></i> </button>
                                        <button title="¿Eliminar?" style="margin:0 !important;padding:0px !important;padding-right:3px !important" type="button" class="btn btn-dark" onClick="FnDelete(@item.id)"><i class="fa fa-trash-o"></i> </button>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
